<!DOCTYPE html>
<html>
    <head>
        <title>{{ site.title }}</title>

        {{ if PRODUCTION }}
            <link rel="stylesheet" href="https://assets.simse.io/theme/style.css">

            {{ else }}
                TEST
            {{ endelse }}
        {{ endif }}
    </head>

    <body>
        {{ if site.featuredImage }}
            <h1>{{ site.title }}</h1>

            {{ if site.darkTheme }}
                <h2>You know that shit ain't racist!</h2>
            {{ endif }}

            {{ else }}
                TEST
            {{ endelse }}
        {{ endif }}

        {{ for post in site.posts }}
            <div>
                <h2>{{ post.title }}</h2>
            </div>
        {{ endfor }}
    </body>
</html>